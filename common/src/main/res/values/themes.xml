<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CityEats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/grey_200</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Surface and background. -->
        <item name="colorSurface">@color/white</item>
        <item name="backgroundColor">@color/grey_200</item>

        <!-- Icons -->
        <item name="colorIcon">@color/grey_800</item>
        <item name="colorIconDisabled">@color/grey_400</item>
    </style>
</resources>
